@using System.ComponentModel.DataAnnotations
@using tp_aspire_samy_jugurtha.WebApp.Models
@using tp_aspire_samy_jugurtha.WebApp.Clients
@inject IWorklyClient Api

<EditForm EditContext="editContext" OnValidSubmit="Submit" FormName="add-booking-form" class="modern-form">
    <DataAnnotationsValidator />

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="form-modern-alert">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            @_errorMessage
        </div>
    }
    
    <div class="form-modern-grid">
        <div class="form-modern-group">
            <label class="form-modern-label">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="9" y1="3" x2="9" y2="21"></line>
                </svg>
                Type de ressource
            </label>
            <select @bind="Model.ResourceType" class="form-modern-control">
                <option value="@ResourceType.Room">Salle</option>
                <option value="@ResourceType.Desk">Bureau</option>
            </select>
            <ValidationMessage For="() => Model.ResourceType" class="form-modern-error" />
        </div>

        <div class="form-modern-group">
            <label class="form-modern-label">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                    <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
                </svg>
                @(Model.ResourceType == ResourceType.Room ? "Salle" : "Bureau")
            </label>
            @if (Model.ResourceType == ResourceType.Room && rooms != null)
            {
                <select @bind="Model.ResourceId" class="form-modern-control">
                    <option value="0">-- Sélectionnez une salle --</option>
                    @foreach (var room in rooms)
                    {
                        <option value="@room.Id">@room.Name (@room.Capacity places) - @room.Location</option>
                    }
                </select>
            }
            else
            {
                <InputNumber @bind-Value="Model.ResourceId" class="form-modern-control" />
            }
            <ValidationMessage For="() => Model.ResourceId" class="form-modern-error" />
        </div>

        <div class="form-modern-group">
            <label class="form-modern-label">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                Date et heure de début
            </label>
            <InputDate @bind-Value="Model.StartUtc" class="form-modern-control" />
            <ValidationMessage For="() => Model.StartUtc" class="form-modern-error" />
        </div>

        <div class="form-modern-group">
            <label class="form-modern-label">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                Date et heure de fin
            </label>
            <InputDate @bind-Value="Model.EndUtc" class="form-modern-control" />
            <ValidationMessage For="() => Model.EndUtc" class="form-modern-error" />
        </div>
    </div>

    <button type="submit" class="btn-modern-submit">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        Réserver maintenant
    </button>
</EditForm>

