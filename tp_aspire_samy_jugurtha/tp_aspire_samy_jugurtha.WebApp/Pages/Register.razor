@page "/register"
@layout PublicLayout

<PageTitle>Créer un compte - Workly</PageTitle>

<div class="auth-page">
    <div class="container-public">
        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-header">
                    <img src="/images/logo_workly.png" alt="Workly Logo" class="auth-logo" />
                    <h1>Créer un compte</h1>
                    <p>Rejoignez Workly et commencez gratuitement</p>
                </div>
                
                <div class="auth-method">
                    <a href="/authentication/register" class="btn-oidc">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
                        </svg>
                        S'inscrire avec Keycloak
                    </a>
                </div>
                
                <div class="auth-info">
                    <div class="info-item">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <span>Gratuit pendant 30 jours</span>
                    </div>
                    <div class="info-item">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <span>Aucune carte bancaire requise</span>
                    </div>
                    <div class="info-item">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <span>Support 24/7</span>
                    </div>
                </div>
                
                <div class="auth-divider">
                    <span>ou</span>
                </div>
                
                <div class="auth-link">
                    <p>Vous avez déjà un compte ? <a href="/login">Se connecter</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-page {
        min-height: calc(100vh - 400px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4rem 0;
        background: linear-gradient(135deg, #f8f9fc 0%, #fff 100%);
    }

    .auth-container {
        width: 100%;
        max-width: 480px;
    }

    .auth-card {
        background: white;
        border-radius: 24px;
        padding: 3rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        border: 1px solid var(--border);
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .auth-logo {
        height: 64px;
        width: auto;
        margin-bottom: 1.5rem;
    }

    .auth-header h1 {
        font-size: 2rem;
        font-weight: 800;
        color: var(--primary);
        margin-bottom: 0.5rem;
    }

    .auth-header p {
        color: var(--text-secondary);
        font-size: 1rem;
    }

    .auth-method {
        margin-bottom: 2rem;
    }

    .btn-oidc {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
        color: white;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.05rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(255, 107, 53, 0.3);
        transition: all 0.3s ease;
    }

    .btn-oidc:hover {
        box-shadow: 0 12px 28px rgba(255, 107, 53, 0.4);
        transform: translateY(-2px);
    }

    .auth-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1.5rem;
        background: var(--bg-secondary);
        border-radius: 12px;
        margin-bottom: 2rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--text-primary);
        font-size: 0.95rem;
    }

    .info-item svg {
        color: var(--success);
        flex-shrink: 0;
    }

    .auth-divider {
        position: relative;
        text-align: center;
        margin: 2rem 0;
    }

    .auth-divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: var(--border);
    }

    .auth-divider span {
        position: relative;
        background: white;
        padding: 0 1rem;
        color: var(--text-secondary);
        font-size: 0.875rem;
    }

    .auth-link {
        text-align: center;
    }

    .auth-link p {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .auth-link a {
        color: var(--accent);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .auth-link a:hover {
        color: var(--accent-light);
    }
</style>
