@page "/admin"
@using Microsoft.AspNetCore.Authorization
@using tp_aspire_samy_jugurtha.WebApp.Clients
@using tp_aspire_samy_jugurtha.WebApp.Models
@attribute [Authorize(Roles = "admin")]
@inject IWorklyClient Api

<PageTitle>Administration - Workly</PageTitle>

<div class="admin-container">
    <div class="page-header">
        <h1>Administration</h1>
        <p class="text-secondary">Gestion de toutes les r√©servations</p>
    </div>

    @if (bookings is null)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p class="mt-2">Chargement des r√©servations...</p>
        </div>
    }
    else if (!bookings.Any())
    {
        <div class="card">
            <div class="empty-state">
                <svg class="empty-state-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <div class="empty-state-title">Aucune r√©servation</div>
                <p class="empty-state-description">Il n'y a actuellement aucune r√©servation dans le syst√®me.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                üìÖ Toutes les r√©servations (@bookings.Count)
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Utilisateur</th>
                            <th>Salle</th>
                            <th>Date d√©but</th>
                            <th>Date fin</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in bookings.OrderByDescending(b => b.StartUtc))
                        {
                            <tr>
                                <td>#@booking.Id</td>
                                <td>@booking.AppUserId</td>
                                <td>@GetResourceName(booking)</td>
                                <td>@booking.StartUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@booking.EndUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <button class="btn btn-danger btn-sm" @onclick="() => DeleteBooking(booking.Id)">
                                        Supprimer
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<Booking>? bookings;

    protected override async Task OnInitializedAsync()
    {
        await LoadBookings();
    }

    private async Task LoadBookings()
    {
        try
        {
            bookings = await Api.GetAllBookingsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors du chargement des r√©servations: {ex.Message}");
            bookings = new List<Booking>();
        }
    }

    private string GetResourceName(Booking booking)
    {
        return booking.ResourceType switch
        {
            ResourceType.Room => $"Salle #{booking.ResourceId}",
            ResourceType.Desk => $"Bureau #{booking.ResourceId}",
            _ => $"Resource #{booking.ResourceId}"
        };
    }

    private async Task DeleteBooking(int bookingId)
    {
        try
        {
            await Api.DeleteBookingAsync(bookingId);
            await LoadBookings();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors de la suppression: {ex.Message}");
        }
    }
}

