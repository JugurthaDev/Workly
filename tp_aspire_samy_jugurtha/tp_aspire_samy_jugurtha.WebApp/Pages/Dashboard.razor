@page "/dashboard"
@attribute [Authorize]
@using tp_aspire_samy_jugurtha.WebApp.Clients
@using tp_aspire_samy_jugurtha.WebApp.Models
@using Microsoft.AspNetCore.Authorization
@inject IWorklyClient Api

<PageTitle>Tableau de bord - Workly</PageTitle>

<div class="dashboard-modern">
    <div class="dashboard-hero">
        <div class="hero-text">
            <h1 class="dashboard-title">Tableau de bord</h1>
            <p class="dashboard-subtitle">Bienvenue sur Workly - Gérez vos espaces de travail intelligemment</p>
        </div>
        <div class="hero-actions">
            <AuthorizeView Roles="admin">
                <Authorized>
                    <a href="/admin" class="btn-dashboard btn-secondary-dashboard">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M12 1v6m0 6v6m5.2-13.2l-4.2 4.2m0 6l4.2 4.2M1 12h6m6 0h6m-13.2 5.2l4.2-4.2m0-6l-4.2-4.2"></path>
                        </svg>
                        Administration
                    </a>
                </Authorized>
            </AuthorizeView>
            <a href="/bookings" class="btn-dashboard btn-primary-dashboard">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Nouvelle réservation
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-modern"></div>
            <p class="loading-text">Chargement de vos données...</p>
        </div>
    }
    else
    {
        <div class="stats-modern-grid">
            <div class="stat-modern-card">
                <div class="stat-modern-header">
                    <div class="stat-modern-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="9" y1="3" x2="9" y2="21"></line>
                        </svg>
                    </div>
                    <div class="stat-modern-trend positive">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                            <polyline points="17 6 23 6 23 12"></polyline>
                        </svg>
                    </div>
                </div>
                <div class="stat-modern-value">@totalRooms</div>
                <div class="stat-modern-label">Salles disponibles</div>
                <div class="stat-modern-footer">
                    <span class="stat-progress-bar">
                        <span class="stat-progress-fill" style="width: 85%; background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);"></span>
                    </span>
                </div>
            </div>

            <div class="stat-modern-card">
                <div class="stat-modern-header">
                    <div class="stat-modern-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                    </div>
                    <div class="stat-modern-trend positive">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                            <polyline points="17 6 23 6 23 12"></polyline>
                        </svg>
                    </div>
                </div>
                <div class="stat-modern-value">@totalBookings</div>
                <div class="stat-modern-label">Réservations actives</div>
                <div class="stat-modern-footer">
                    <span class="stat-progress-bar">
                        <span class="stat-progress-fill" style="width: 65%; background: linear-gradient(90deg, #f093fb 0%, #f5576c 100%);"></span>
                    </span>
                </div>
            </div>

            <div class="stat-modern-card">
                <div class="stat-modern-header">
                    <div class="stat-modern-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                    <div class="stat-modern-trend positive">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                            <polyline points="17 6 23 6 23 12"></polyline>
                        </svg>
                    </div>
                </div>
                <div class="stat-modern-value">@occupancyRate<span class="stat-modern-unit">%</span></div>
                <div class="stat-modern-label">Taux d'occupation</div>
                <div class="stat-modern-footer">
                    <span class="stat-progress-bar">
                        <span class="stat-progress-fill" style="width: @(occupancyRate)%; background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);"></span>
                    </span>
                </div>
            </div>

            <div class="stat-modern-card">
                <div class="stat-modern-header">
                    <div class="stat-modern-icon" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5">
                            <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                        </svg>
                    </div>
                    <div class="stat-modern-trend positive">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                            <polyline points="17 6 23 6 23 12"></polyline>
                        </svg>
                    </div>
                </div>
                <div class="stat-modern-value">@availableNow</div>
                <div class="stat-modern-label">Disponibles maintenant</div>
                <div class="stat-modern-footer">
                    <span class="stat-progress-bar">
                        <span class="stat-progress-fill" style="width: 75%; background: linear-gradient(90deg, #fa709a 0%, #fee140 100%);"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="dashboard-grid">
            <div class="dashboard-card">
                <div class="card-modern-header">
                    <div class="card-modern-title">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <span>Réservations récentes</span>
                    </div>
                    <a href="/bookings" class="card-modern-link">Voir tout →</a>
                </div>
                <div class="card-modern-body">
                    @if (recentBookings != null && recentBookings.Any())
                    {
                        <div class="bookings-modern-list">
                            @foreach (var booking in recentBookings.Take(5))
                            {
                                <div class="booking-modern-item">
                                    <div class="booking-modern-icon">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                            <line x1="16" y1="2" x2="16" y2="6"></line>
                                            <line x1="8" y1="2" x2="8" y2="6"></line>
                                            <line x1="3" y1="10" x2="21" y2="10"></line>
                                        </svg>
                                    </div>
                                    <div class="booking-modern-details">
                                        <div class="booking-modern-title">@booking.ResourceType #@booking.ResourceId</div>
                                        <div class="booking-modern-time">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <circle cx="12" cy="12" r="10"></circle>
                                                <polyline points="12 6 12 12 16 14"></polyline>
                                            </svg>
                                            @booking.StartUtc.ToString("dd/MM/yyyy HH:mm") - @booking.EndUtc.ToString("HH:mm")
                                        </div>
                                    </div>
                                    <span class="badge-modern badge-modern-@GetStatusClass(booking.Status)">@booking.Status</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-modern-state">
                            <div class="empty-modern-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                            </div>
                            <div class="empty-modern-title">Aucune réservation</div>
                            <p class="empty-modern-description">Commencez par créer votre première réservation</p>
                            <a href="/bookings" class="btn-modern-empty">Créer une réservation</a>
                        </div>
                    }
                </div>
            </div>

            <div class="dashboard-card">
                <div class="card-modern-header">
                    <div class="card-modern-title">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="9" y1="9" x2="15" y2="9"></line>
                            <line x1="9" y1="15" x2="15" y2="15"></line>
                        </svg>
                        <span>Salles populaires</span>
                    </div>
                    <a href="/rooms" class="card-modern-link">Voir tout →</a>
                </div>
                <div class="card-modern-body">
                    @if (rooms != null && rooms.Any())
                    {
                        <div class="rooms-modern-grid">
                            @foreach (var room in rooms.Take(6))
                            {
                                <div class="room-modern-card">
                                    <div class="room-modern-icon">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                            <line x1="9" y1="9" x2="15" y2="9"></line>
                                            <line x1="9" y1="15" x2="15" y2="15"></line>
                                        </svg>
                                    </div>
                                    <div class="room-modern-name">@room.Name</div>
                                    <div class="room-modern-capacity">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                        </svg>
                                        @room.Capacity personnes
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-modern-state">
                            <div class="empty-modern-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="9" y1="3" x2="9" y2="21"></line>
                                </svg>
                            </div>
                            <div class="empty-modern-title">Aucune salle</div>
                            <p class="empty-modern-description">Ajoutez votre première salle pour commencer</p>
                            <a href="/rooms" class="btn-modern-empty">Ajouter une salle</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Dashboard moderne avec le thème de la page d'accueil */
    .dashboard-modern {
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Hero Dashboard */
    .dashboard-hero {
        background: linear-gradient(135deg, #f8f9fc 0%, #fff 100%);
        padding: 2rem 2.5rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        position: relative;
        overflow: hidden;
    }

    .dashboard-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, rgba(255, 107, 53, 0.08) 0%, rgba(26, 35, 50, 0.05) 100%);
        border-radius: 50%;
        z-index: 0;
    }

    .hero-text, .hero-actions {
        position: relative;
        z-index: 1;
    }

    .dashboard-title {
        font-size: 2rem;
        font-weight: 800;
        color: var(--primary);
        margin: 0 0 0.5rem 0;
        line-height: 1.2;
    }

    .dashboard-subtitle {
        font-size: 1rem;
        color: var(--text-secondary);
        margin: 0;
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn-dashboard {
        padding: 0.875rem 1.75rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: none;
        cursor: pointer;
    }

    .btn-primary-dashboard {
        background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
        color: white;
        box-shadow: 0 6px 20px rgba(255, 107, 53, 0.3);
    }

    .btn-primary-dashboard:hover {
        box-shadow: 0 8px 24px rgba(255, 107, 53, 0.4);
        transform: translateY(-2px);
    }

    .btn-secondary-dashboard {
        background: white;
        color: var(--primary);
        border: 2px solid var(--border);
    }

    .btn-secondary-dashboard:hover {
        border-color: var(--accent);
        color: var(--accent);
        transform: translateY(-2px);
    }

    /* Loading State Moderne */
    .loading-state {
        text-align: center;
        padding: 5rem 2rem;
    }

    .spinner-modern {
        width: 50px;
        height: 50px;
        border: 4px solid var(--bg-secondary);
        border-top-color: var(--accent);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto 1rem;
    }

    .loading-text {
        color: var(--text-secondary);
        font-size: 1rem;
        font-weight: 500;
    }

    /* Stats Grid Moderne */
    .stats-modern-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-modern-card {
        background: white;
        border-radius: 18px;
        padding: 1.75rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
        border: 1px solid var(--border);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .stat-modern-card::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--accent) 0%, var(--accent-light) 100%);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
    }

    .stat-modern-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
    }

    .stat-modern-card:hover::before {
        transform: scaleX(1);
    }

    .stat-modern-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.25rem;
    }

    .stat-modern-icon {
        width: 56px;
        height: 56px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }

    .stat-modern-trend {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-modern-trend.positive {
        background: rgba(16, 185, 129, 0.1);
        color: var(--success);
    }

    .stat-modern-value {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--primary);
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stat-modern-unit {
        font-size: 1.5rem;
        color: var(--text-secondary);
        font-weight: 600;
    }

    .stat-modern-label {
        font-size: 0.9rem;
        color: var(--text-secondary);
        font-weight: 500;
        margin-bottom: 1rem;
    }

    .stat-modern-footer {
        margin-top: 1rem;
    }

    .stat-progress-bar {
        display: block;
        width: 100%;
        height: 6px;
        background: var(--bg-secondary);
        border-radius: 10px;
        overflow: hidden;
    }

    .stat-progress-fill {
        display: block;
        height: 100%;
        border-radius: 10px;
        transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Dashboard Grid */
    .dashboard-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .dashboard-card {
        background: white;
        border-radius: 18px;
        padding: 0;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
        border: 1px solid var(--border);
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .dashboard-card:hover {
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
    }

    .card-modern-header {
        padding: 1.75rem 2rem;
        background: linear-gradient(135deg, #f8f9fc 0%, #fff 100%);
        border-bottom: 1px solid var(--border);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-modern-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.15rem;
        font-weight: 700;
        color: var(--primary);
    }

    .card-modern-title svg {
        stroke: var(--accent);
    }

    .card-modern-link {
        color: var(--accent);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .card-modern-link:hover {
        color: var(--accent-light);
        transform: translateX(4px);
    }

    .card-modern-body {
        padding: 2rem;
    }

    /* Bookings List Moderne */
    .bookings-modern-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .booking-modern-item {
        display: flex;
        align-items: center;
        gap: 1.25rem;
        padding: 1.25rem;
        background: var(--bg-secondary);
        border-radius: 14px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid transparent;
    }

    .booking-modern-item:hover {
        background: white;
        border-color: var(--accent);
        transform: translateX(6px);
        box-shadow: 0 4px 12px rgba(255, 107, 53, 0.1);
    }

    .booking-modern-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        box-shadow: 0 4px 12px rgba(255, 107, 53, 0.25);
    }

    .booking-modern-icon svg {
        width: 24px;
        height: 24px;
        stroke: white;
    }

    .booking-modern-details {
        flex: 1;
    }

    .booking-modern-title {
        font-weight: 600;
        color: var(--primary);
        margin-bottom: 0.35rem;
        font-size: 1rem;
    }

    .booking-modern-time {
        font-size: 0.875rem;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    /* Badges Moderne */
    .badge-modern {
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge-modern-success {
        background: rgba(16, 185, 129, 0.15);
        color: var(--success);
    }

    .badge-modern-warning {
        background: rgba(245, 158, 11, 0.15);
        color: var(--warning);
    }

    .badge-modern-danger {
        background: rgba(239, 68, 68, 0.15);
        color: var(--danger);
    }

    /* Rooms Grid Moderne */
    .rooms-modern-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.25rem;
    }

    .room-modern-card {
        padding: 1.5rem;
        background: var(--bg-secondary);
        border-radius: 14px;
        text-align: center;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 2px solid transparent;
    }

    .room-modern-card:hover {
        background: white;
        border-color: var(--accent);
        transform: translateY(-6px);
        box-shadow: 0 8px 20px rgba(255, 107, 53, 0.15);
    }

    .room-modern-icon {
        width: 56px;
        height: 56px;
        margin: 0 auto 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 6px 16px rgba(102, 126, 234, 0.3);
    }

    .room-modern-icon svg {
        width: 28px;
        height: 28px;
        stroke: white;
    }

    .room-modern-name {
        font-weight: 700;
        margin-bottom: 0.75rem;
        color: var(--primary);
        font-size: 1rem;
    }

    .room-modern-capacity {
        display: flex;
